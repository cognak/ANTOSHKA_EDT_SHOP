	Если НЕ ПустаяСтрока(Дополнительно) Тогда

		Для Позиция = 1 По СтрДлина(Дополнительно) Цикл

			Соответствие.Вставить(Сред(Дополнительно, Позиция, 1), Истина);

		КонецЦикла;

	КонецЕсли;

	Если ВерхнийРегистр = 1 ИЛИ ВерхнийРегистр = 2 Тогда

		Для каждого КлючЗначение Из Соответствие Цикл

			Соответствие.Вставить(ВРег(КлючЗначение.Ключ), Истина);

			Если ВерхнийРегистр = 1 Тогда

				Соответствие.Удалить(КлючЗначение.Ключ);

			КонецЕсли;

		КонецЦикла;

	КонецЕсли;

	Если ДопустимыВНаименовании = Истина Тогда

		Соответствие.Вставить(" ", Истина);
		Соответствие.Вставить("-", Истина);

	КонецЕсли;

	Возврат Соответствие;

