		Соответствие.Вставить("ю","yu");	//	"iu, yu" *
		Соответствие.Вставить("я","ya");	//	"ia, ya" *
		Соответствие.Вставить("`","");		// пропускается
	//	русская специфика
		Соответствие.Вставить("ё","e");
		Соответствие.Вставить("ъ","");		// пропускается
		Соответствие.Вставить("ы","y");
