		|		КОГДА ЗДТ.СтатусЗапроса = ЗНАЧЕНИЕ(Перечисление.СтатусыЗапросовДоступностиТоваровШапка.Отменён)
		|		ИЛИ ЗДТ.СтатусЗапроса = ЗНАЧЕНИЕ(Перечисление.СтатусыЗапросовДоступностиТоваровШапка.ПодтвердитьОтменуОтправитель)
		|		ИЛИ ЗДТ.СтатусЗапроса = ЗНАЧЕНИЕ(Перечисление.СтатусыЗапросовДоступностиТоваровШапка.ПодтвердитьОтменуПолучатель)
		|			ТОГДА 1
		|		ИНАЧЕ 0
		|	КОНЕЦ) КАК Отмененные,
		|	СУММА(ВЫБОР
		|		КОГДА ЗДТ.СтатусЗапроса = ЗНАЧЕНИЕ(Перечисление.СтатусыЗапросовДоступностиТоваровШапка.Закрыт)
		|			ТОГДА 1
		|		ИНАЧЕ 0
		|	КОНЕЦ) КАК Закрытые
		|ПОМЕСТИТЬ ОтобранныеЗапросы
		|ИЗ
		|	ЗаказДляОтмены КАК ЗаказДляОтмены
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ Документ.ЗапросДоступностиТоваров КАК ЗДТ
		|		ПО ЗаказДляОтмены.ДокументЗаказа = ЗДТ.ДокументОснование
		|СГРУППИРОВАТЬ ПО
		|	ЗаказДляОтмены.ДокументЗаказа
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	ОтобранныеЗапросы.ДокументЗаказа КАК ДокументЗаказа,
		|	ОтобранныеЗапросы.ВсегоЗапросов КАК ВсегоЗапросов,
		|	ОтобранныеЗапросы.ПродажаНаКассе КАК ПродажаНаКассе,
		|	ОтобранныеЗапросы.Отмененные КАК Отмененные,
		|	ОтобранныеЗапросы.Закрытые КАК Закрытые,
		|	1 КАК ВсегоСтрок,
		|	СостояниеСтрок.КлючСвязиЗаказа КАК КлючСвязиЗаказа,
		|	ВЫБОР
		|		КОГДА СостояниеСтрок.Продано
		|			ТОГДА 1
		|		ИНАЧЕ 0
		|	КОНЕЦ КАК ПроданныеСтроки
		|ИЗ
		|	ОтобранныеЗапросы КАК ОтобранныеЗапросы
		|		ВНУТРЕННЕЕ СОЕДИНЕНИЕ РегистрСведений.СостояниеСтрокЗаказаПокупателя КАК СостояниеСтрок
		|		ПО ОтобранныеЗапросы.ДокументЗаказа = СостояниеСтрок.ЗаказПокупателя
		|ИТОГИ
		|	СУММА(ВсегоСтрок),
		|	СУММА(ПроданныеСтроки)
		|ПО
		|	ДокументЗаказа,
		|	ВсегоЗапросов,
		|	ПродажаНаКассе,
		|	Отмененные,
		|	Закрытые";
	
	Запрос.УстановитьПараметр("ДатаРезервированияЗаказа", НачалоДня(ТекущаяДатаСеанса()));
	
	РезультатЗапроса = Запрос.Выполнить();
	
	ВыборкаДокументЗаказа = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
	Пока ВыборкаДокументЗаказа.Следующий() Цикл

		ВыборкаВсегоЗапросов = ВыборкаДокументЗаказа.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
		Пока ВыборкаВсегоЗапросов.Следующий() Цикл

			ВыборкаПродажаНаКассе = ВыборкаВсегоЗапросов.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
			Пока ВыборкаПродажаНаКассе.Следующий() Цикл

				ВыборкаОтмененные = ВыборкаПродажаНаКассе.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
				Пока ВыборкаОтмененные.Следующий() Цикл

					ВыборкаЗакрытые = ВыборкаОтмененные.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
					Пока ВыборкаЗакрытые.Следующий() Цикл

						Попытка
							
							НачатьТранзакцию();
							
							Если (ВыборкаЗакрытые.ВсегоЗапросов - ВыборкаЗакрытые.Отмененные - ВыборкаЗакрытые.Закрытые) = ВыборкаЗакрытые.ПродажаНаКассе Тогда
								
								Если ВыборкаЗакрытые.ПроданныеСтроки = 0 Тогда
								
									ДокументОбъект = ВыборкаЗакрытые.ДокументЗаказа.ПолучитьОбъект();
									ДокументОбъект.Статус = Перечисления.СтатусыЗаказовПокупателей.Отменён;
									ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение);
									
								Иначе
									
									Выборка = ВыборкаЗакрытые.Выбрать();
				
									Пока Выборка.Следующий() Цикл
										
										Если Выборка.ПроданныеСтроки = 0 Тогда 
											
											ДокументОбъект = ВыборкаЗакрытые.ДокументЗаказа.ПолучитьОбъект();
											
											Отбор = Новый Структура();
											Отбор.Вставить("КлючСвязиЗапросаДоступности", Выборка.КлючСвязиЗаказа);
											НайденноеЗначение = ДокументОбъект.Товары.НайтиСтроки(Отбор);
											Если НайденноеЗначение.Количество() = 1 Тогда

												Индекс = ДокументОбъект.Товары.Индекс(НайденноеЗначение[0]);
												ДокументОбъект.Товары[Индекс].Отменено = Истина;
												ДокументОбъект.Товары[Индекс].ПричинаОтмены = Справочники.ПричиныОтменыЗаказовПокупателей.ПревышениеГлубиныРезерва;
												
												ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение);
												
											КонецЕсли;

										КонецЕсли;

									КонецЦикла;

								КонецЕсли;
								
							КонецЕсли;

							ЗафиксироватьТранзакцию();

						Исключение
							
							ОтменитьТранзакцию();

							ТекстОшибки = ОписаниеОшибки();
							ЗаписьЖурналаРегистрации("ОтменаРезерваЗаказаПоВремени", УровеньЖурналаРегистрации.Ошибка
								, Метаданные.Документы.ЗаказПокупателя
