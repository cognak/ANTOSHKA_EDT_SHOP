						ДокументОбъект.Статус = Перечисления.СтатусыЗаказовПокупателей.ЗапросДоступности;
						ДокументОбъект.Записать(РежимЗаписиДокумента.Проведение, РежимПроведенияДокумента.Неоперативный);
		
						ЗафиксироватьТранзакцию();
					
