			ТекстОшибки = ОписаниеОшибки();
			ЗаписьЖурналаРегистрации("АвтоПеремещения", УровеньЖурналаРегистрации.Ошибка
				, Метаданные.Документы.ЗапросДоступностиТоваров
				, Выборка.Ссылка
				, ТекстОшибки
			);

		КонецПопытки;

