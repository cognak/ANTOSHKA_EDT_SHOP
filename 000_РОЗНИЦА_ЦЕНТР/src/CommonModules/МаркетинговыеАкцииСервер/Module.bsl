			КонецЕсли;
			ДнейОтСегодня.Сортировать("Разница Возр");
			
		КонецЦикла; 
		// +HVOYA. 15.09.2016 17:43:40, Львова Е.А.
		Если ДнейОтСегодня.Количество()<>0 Тогда
		
			Возврат ДнейОтСегодня[0].ДатаРождения;
		
		КонецЕсли;
		// -HVOYA. 15.09.2016 17:43:43, Львова Е.А.
	
	КонецЕсли;
	// -HVOYA. 23.08.2016 14:42:07, Львова Е.А. 
