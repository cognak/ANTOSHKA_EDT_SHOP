		РезультатЗапроса = Запрос.Выполнить();

		ВыборкаДетальныеЗаписи = РезультатЗапроса.Выбрать();
		
		ДнейОтСегодня = Новый ТаблицаЗначений;
		ДнейОтСегодня.Колонки.Добавить("Разница");
		ДнейОтСегодня.Колонки.Добавить("ДатаРождения");
			
		Пока ВыборкаДетальныеЗаписи.Следующий() Цикл

			Если НЕ ЗначениеЗаполнено(ВыборкаДетальныеЗаписи.ДатаРождения) Тогда	//	LNK 31.12.2022 07:11:31
				
				Продолжить;

			КонецЕсли;

			МесяцРождения = Месяц(ВыборкаДетальныеЗаписи.ДатаРождения);
			ДеньРождения = День(ВыборкаДетальныеЗаписи.ДатаРождения);
