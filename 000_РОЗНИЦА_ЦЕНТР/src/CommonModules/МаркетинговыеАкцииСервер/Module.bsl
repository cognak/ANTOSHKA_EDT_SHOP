				НСтр("ru = 'ЕСТЬ ДУБЛИРОВАНИЕ для сочетания: Скидка %1, Дата начала %2'"),
				Выборка.СкидкаНаценка,
				Формат(Выборка.ДатаНачала,"ДФ=dd.MM.yyyy")
