		УстановитьРеквизиты("94092", "ОКОНЧ_СРОК_РЕАЛИЗ", Справочники.СтатьиРасходов.ОкончаниеСроковРеализации);
		УстановитьРеквизиты("94093", "БРАК_ПРИХОД_СКЛАД", Справочники.СтатьиРасходов.БракПоПриходуСоСклада);
		УстановитьРеквизиты("94094", "БРАК_ПОСТАВЩИК"	, Справочники.СтатьиРасходов.БракОтПоставщика);
		УстановитьРеквизиты("94095", "ЕСТЕСТВ_ПОРЧА"	, Справочники.СтатьиРасходов.ЕстественнаяПорчаТовара);
		УстановитьРеквизиты("94096", "ВОЗВРАТ_ГАРАНТИЯ"	, Справочники.СтатьиРасходов.ВозвратОтПокупателяПоГарантии);
		УстановитьРеквизиты("94097", "СПИСАНИЕ_КРАЖ"	, Справочники.СтатьиРасходов.КражиСНомеромДела);
